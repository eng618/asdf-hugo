#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

platform="$(get_platform)"

mkdir -p "$ASDF_DOWNLOAD_PATH"

# TODO: Adapt this to proper extension and adapt extracting strategy.
if [ "$platform" = "darwin" ]; then
  release_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME-$ASDF_INSTALL_VERSION.pkg"
else
  release_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME-$ASDF_INSTALL_VERSION.tar.gz"
fi

# Download tar.gz file to the download directory
download_release "$ASDF_INSTALL_VERSION" "$release_file"

# Extract contents of file into the download directory
if [ "$platform" = "darwin" ]; then
  # Extract .pkg
  pkgutil --expand "$release_file" "$ASDF_DOWNLOAD_PATH/pkg_expand"
  cd "$ASDF_DOWNLOAD_PATH/pkg_expand"
  cpio -i <Payload
  find . -name hugo -type f -exec mv {} "$ASDF_DOWNLOAD_PATH/" \;
  cd -
  rm -rf "$ASDF_DOWNLOAD_PATH/pkg_expand"
else
  tar -xzf "$release_file" -C "$ASDF_DOWNLOAD_PATH" || fail "Could not extract $release_file"
fi

chmod +x "$ASDF_DOWNLOAD_PATH/$TOOL_NAME"

# Remove the file since we don't need to keep it
rm "$release_file"
